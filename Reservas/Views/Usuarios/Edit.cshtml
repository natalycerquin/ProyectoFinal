@model Reservas.Models.Personal


@{
    ViewData["Title"] = "Editar Personal";
    Layout = "/Views/Shared/_LayoutRes.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Editar Mesa</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <input type="submit" id="editarPersonal" value="Editar Personal" class="btn btn-primary" />
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombres" class="control-label">Nombres</label>
                            <input asp-for="Nombres" id="Nombres" class="form-control" />
                            <span asp-validation-for="Nombres" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Username" class="control-label">Username</label>
                            <input asp-for="Username" id="NumeroPersonas" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" id="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rol" class="control-label">Estado</label>
                            <select asp-for="Rol" id="Rol" class="form-control" required>

                                <option selected>Seleccionar estado de mesa</option>
                                <option value="Mesero">Mesero</option>
                                <option value="Concinero">Concinero</option>
                                <option value="Caja">Caja</option>
                                <option value="Invitado">Invitado</option>

                            </select>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" id="editarMesa" value="Editar Personal" class="btn btn-primary" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}