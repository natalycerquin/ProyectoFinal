@model Reservas.Models.Plato

@{
    ViewData["Title"] = "Editar plato";
    Layout = "/Views/Shared/_LayoutRes.cshtml";
    var categoria = ViewBag.Categoria;
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Editar un Plato</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <div class="card">
                <div class="card-body">

                    <form method="post" asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="NombrePlato" class="control-label">Nombre Plato</label>
                            <input asp-for="NombrePlato" id="NombrePlato" class="form-control" />
                            <span asp-validation-for="NombrePlato" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Descripcion" class="control-label"></label>
                            <input asp-for="Descripcion" id="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Precio" class="control-label">Precio</label>
                            <input asp-for="Precio" id="Precio" type="number" class="form-control" />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoriaId" class="control-label">Número Mesa</label>
                            <select asp-for="CategoriaId" id="CategoriaId" class="form-control">
                                <option>Seleccionar Categoría de plato</option>
                                @foreach (var item in categoria)
                                {
                                    <option value="@item.Id">@item.NombreCategoria</option>
                                }
                            </select>
                            <span asp-validation-for="CategoriaId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" id="editarPlato" value="Editar Plato" class="btn btn-primary" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
